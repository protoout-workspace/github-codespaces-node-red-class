{
  "postCreateCommand": "npm i -g npm@latest && npm i -g node-red@4.1.0",
  "postStartCommand": "bash -lc 'command -v node-red >/dev/null || npm i -g node-red@4.1.0'",
  "forwardPorts": [1880],
  "portsAttributes": {
    "1880": {
      "label": "Node-RED",
      "visibility": "public"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 300,
        "remote.autoForwardPorts": false
      }
    }
  }
}